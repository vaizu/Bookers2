<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

    <title>Bookers2</title>
  </head>
  <body>
    <main>
      <%= flash[:notice] %>
      <div class = "container">
        <div class = "row">
          <div class = "col-md-3">
      <h2>User info</h2>
       <%= image_tag @book.user.get_profile_image("63x63") %>
        <table class = "table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @book.user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @book.user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class = "row">
            <a class="btn btn-outline-secondary btn-block"
              <%= link_to edit_user_path(@user) do %>
              <span class="fas fa-user-cog"></span>
              <% end %>
            </a>

        </div>
        <h2 class = "mt-3">New book</h2>
         <%= form_with model: @new_book, local:true do |f| %>
        <div class = "form-group">
         <label for = "book_title">Title</label>
         <p><%= f.text_field :title %></p>
        </div>
        <div class = "form-group">
          <label for = "book_opinion">Opinion</label>
          <p><%= f.text_field :body %></p>
        </div>
        <div class = "form-group">
          <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
        </div>
          <% end %>
    </div>

          <div class = "col-md-8 offset-md-1">
            <h2>Book detail</h2>
            <table class = "table">
              <tbody>
                <tr>
                  <td>
                    <%= link_to user_path(@book.user)  do %>
                    <%= image_tag @book.user.get_profile_image("40x40") %></br>
                    <%= @book.user.name %>
                    <% end %>
                  </td>
                  <td>
                    <%= @book.title %>
                  </td>
                  <td>
                    <%= @book.body %>
                  </td>
                    <% if @book.user == current_user %>
                  <td>
                    <a class="btn btn-sm btn-success"
                    <%= link_to "Edit", edit_book_path(@book.id) %>
                    </a>
                  </td>
                  <td>
                    <a class="btn btn-sm btn-success"
                    <%= link_to "Destroy", book_path(@book.id), method: :delete %>
                    </a>
                  </td>
                    <% end %>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </main>
</div>