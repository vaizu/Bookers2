    <div class = "col-md-3">
      <h2>User info</h2>
        <%= image_tag user.get_profile_image("63x63") %>
        <table class = "table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= user.introduction %></th>
            </tr>
          </tbody>
        </table>
          <% if user == current_user %>
          <a class="btn btn-outline-secondary btn-block"
          <%= link_to edit_user_path(user) do %>
          <span class="fas fa-user-cog"></span>
          <% end %>
          </a>
          <% end %>
        <h2 class = "mt-3">New book</h2>
         <%= form_with model: book, local:true do |f| %>
        <div class = "form-group">
         <label for = "book_title">Title</label>
         <p><%= f.text_field :title %></p>
        </div>
        <div class = "form-group">
          <label for = "book_opinion">Opinion</label>
          <p><%= f.text_field :body %></p>
        </div>
        <div class = "form-group">
          <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
        </div>
          <% end %>
    </div>
