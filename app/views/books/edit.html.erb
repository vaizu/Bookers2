<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, local:true do |f| %>
  <label for="inputtitle">Title</label>
  <%= f.text_field :title, autofocus: true, id:"inputtitle", placeholder:"Title"%>
  <label for="inputbody">Opinion</label>
  <%= f.text_field :body, autofocus: true, id:"inputbody", placeholder:"Opinion"%>
  <%= f.submit "Update book" %>
<% end %>

<%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", '/books' %>