<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

    <title>Bookers2</title>
  </head>
<body>
<main>
  <%= flash[:notice] %>
  <div class = "container">
    <div class = "row">
       <div class = "container px-5 px-sm-0">
        <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
          <h2>User info</h2>
          <div id = "error_explanation">

            <% if @user.errors.any? %>
              <h3>
                <%= @user.errors.count %>errors prohibited this obj from being saved:
              </h3>
              <ul>
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
            <% end %>
              </ul>
        </div>

        <%= form_with model: @user, local:true do |f| %>
        <div class = "form-group">
          <label for="inputName">
            Name
          </label>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
        </div>
        <div class = "form-group">
          <label for="inputImage">Image</label>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        </div>
        <div class = "form-group">
          <label for="inputintroduction">Introduction</label>
          <%= f.text_field :introduction, autofocus: true, id:"inputintroduction", placeholder:"Introduction"%>
        </div>
        <div class = "form-group">
          <input type="submit" name="commit" value="Update User" class="btn btn-secondary" data-disable-with="Update User">
        </div>
        <% end %>
      </div>
    </div>
  </div>
</main>