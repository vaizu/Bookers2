<%= render 'books/list', books: @books %>

<h1>Books</h1>

<% @books.each do |book| %>
<div>
  <p>投稿ユーザー画像：<%= image_tag book.user.get_profile_image("100x100") %></p>
  <%= link_to book_path(book.id) do %>
    <p>Title：<%= book.title %></p>
  <% end %>
  <p>Opinion：<%= book.body %></p>
</div>
<% end %>